{
    "openapi": "3.0.1",
    "info": {
        "title": "Paths to work with faculty information",
        "description": "Here is a description of the paths to the faculty information API.",
        "contact": {
            "email": "apiteam@swagger.io"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http:/localhost/3000",
            "description": "API testing server"
        },
        {
            "url": "https:/localhost/3000",
            "description": "API testing server"
        }
    ],
    "paths": {
        "/infoFaculties": {
            "get": {
                "summary": "Get list of faculties information",
                "operationId": "read_info_faculties",
                "tags": [
                    "faculties information"
                ],
                "responses": {
                    "200": {
                       "description": "Faculties information read successfully",
                       "content": {
                           "application/json": {
                               "schema": {
                                   "$ref": "#/components/schemas/ReadInfoFaculties"
                               }
                           }
                       }
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            },
            "post": {
                "summary": "Add new faculty information",
                "operationId": "create_info_faculty",
                "tags": [
                    "faculties information"
                ],
                "requestBody": {
                    "description": "Request body for creating a faculty information",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/InfoFaculty"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                       "description": "Null response"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            }
        },
        "/infoFaculties/{id}": {
            "get": {
                "summary": "Get faculty information by id",
                "operationId": "info_faculty_by_id",
                "tags": [
                    "faculties information"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/id"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Faculty information read successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ReadInfoFaculty"
                                }
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            },
            "post": {
                "summary": "Update faculty information by id",
                "operationId": "update_info_faculty",
                "tags": [
                    "faculties information"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/id"
                    }
                ],
                "requestBody": {
                    "description": "Request body for faculty information update",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/InfoFaculty"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                       "description": "Null response"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            },
            "delete": {
                "summary": "Delete faculty information",
                "operationId": "delete_info_faculty",
                "tags": [
                    "faculties information"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/id"
                    }
                ],
                "responses": {
                    "200": {
                       "description": "Null response"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            }
        }
    },
    "components": {
        "parameters": {
            "id": {
                "name": "id",
                "description": "Faculty information id",
                "required": true,
                "in": "path",
                "schema": {
                    "type": "integer",
                    "format": "int32",
                    "minimum": 0,
                    "example": 42
                }
            }
        },
        "responses": {
            "Unauthorized": {
                "description": "Unauthorized",
                "content": {
                   "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        },
                        "example": {
                            "code": 401,
                            "message": "Authorization required"
                        }
                    }
                }
            },
            "NotFound": {
                "description": "The specified resource was not found",
                "content": {
                   "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        },
                        "example": {
                            "code": 404,
                            "message": "Object not found"
                        }
                    }
                }
            },
            "UnexpectedError": {
                "description": "Unexpected error",
                "content": {
                   "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        }
                    }
                }
            }
        },
        "schemas": {
            "InfoFaculty": {
                "type": "object",
                "required": [
                    "description",
                    "phone_number"
                ],
                "properties": {
                    "description": {
                        "description": "Faculty description",
                        "type": "string",
                        "example": "Mathematical faculty is one of the oldest faculties of the university"
                    },
                    "phone_number": {
                        "description": "phone of the faculty",
                        "type": "string",
                        "example": "+37529123456"
                    }
                }
            },
            "ReadInfoFaculty": {
                "allOf": [
                    {
                        "type": "object",
                        "required": [
                            "id"
                        ],
                        "properties": {
                            "id": {
                                "description": "faculty information id",
                                "type": "integer",
                                "format": "int32",
                                "minimum": 0,
                                "example": 42
                            }
                        }
                    },
                    {
                        "$ref": "#/components/schemas/InfoFaculty"
                    }
                ]
            },
            "ReadInfoFaculties": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/ReadInfoFaculty"
                }
            },
            "Error": {
                "type": "object",
                "required": [
                    "code",
                    "message"
                ],
                "properties": {
                    "code": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "message": {
                        "type": "string"
                    }
                }
            }
        }
    }
}