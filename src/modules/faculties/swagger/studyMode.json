{
    "openapi": "3.0.1",
    "info": {
        "title": "Paths to work with study modes",
        "description": "Here is a description of the paths to the study modes API.",
        "contact": {
            "email": "apiteam@swagger.io"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http:/localhost/3000",
            "description": "API testing server"
        },
        {
            "url": "https:/localhost/3000",
            "description": "API testing server"
        }
    ],
    "paths": {
        "/studyModes": {
            "get": {
                "summary": "Get list of study modes",
                "operationId": "read_study_modes",
                "tags": [
                    "study modes"
                ],
                "responses": {
                    "200": {
                       "description": "Study modes read successfully",
                       "content": {
                           "application/json": {
                               "schema": {
                                   "$ref": "#/components/schemas/ReadStudyModes"
                               }
                           }
                       }
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            },
            "post": {
                "summary": "Add new study mode",
                "operationId": "create_study_mode",
                "tags": [
                    "study modes"
                ],
                "requestBody": {
                    "description": "Request body for creating a study mode",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/StudyMode"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                       "description": "Null response"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            }
        },
        "/studyModes/{id}": {
            "get": {
                "summary": "Get study mode by id",
                "operationId": "study mode_by_id",
                "tags": [
                    "study modes"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/id"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Study mode read successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ReadStudyMode"
                                }
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            },
            "post": {
                "summary": "Update study mode by id",
                "operationId": "update_study_mode",
                "tags": [
                    "study modes"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/id"
                    }
                ],
                "requestBody": {
                    "description": "Request body for study mode update",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/StudyMode"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                       "description": "Null response"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            },
            "delete": {
                "summary": "Delete study mode",
                "operationId": "delete_study_mode",
                "tags": [
                    "study modes"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/id"
                    }
                ],
                "responses": {
                    "200": {
                       "description": "Null response"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            }
        }
    },
    "components": {
        "parameters": {
            "id": {
                "name": "id",
                "description": "Study mode id",
                "required": true,
                "in": "path",
                "schema": {
                    "type": "integer",
                    "format": "int32",
                    "minimum": 0,
                    "example": 42
                }
            }
        },
        "responses": {
            "Unauthorized": {
                "description": "Unauthorized",
                "content": {
                   "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        },
                        "example": {
                            "code": 401,
                            "message": "Authorization required"
                        }
                    }
                }
            },
            "NotFound": {
                "description": "The specified resource was not found",
                "content": {
                   "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        },
                        "example": {
                            "code": 404,
                            "message": "Object not found"
                        }
                    }
                }
            },
            "UnexpectedError": {
                "description": "Unexpected error",
                "content": {
                   "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        }
                    }
                }
            }
        },
        "schemas": {
            "StudyMode": {
                "type": "object",
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "description": "study mode name",
                        "type": "string",
                        "example": "Full-time education"
                    }
                }
            },
            "ReadStudyMode": {
                "allOf": [
                    {
                        "type": "object",
                        "required": [
                            "id"
                        ],
                        "properties": {
                            "id": {
                                "description": "study mode id",
                                "type": "integer",
                                "format": "int32",
                                "minimum": 0,
                                "example": 42
                            }
                        }
                    },
                    {
                        "$ref": "#/components/schemas/StudyMode"
                    }
                ]
            },
            "ReadStudyModes": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/ReadStudyMode"
                }
            },
            "Error": {
                "type": "object",
                "required": [
                    "code",
                    "message"
                ],
                "properties": {
                    "code": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "message": {
                        "type": "string"
                    }
                }
            }
        }
    }
}