{
    "openapi": "3.0.1",
    "info": {
        "title": "Paths to work with groups",
        "description": "Here is a description of the paths to the groups API.",
        "contact": {
            "email": "apiteam@swagger.io"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http:/localhost/3000",
            "description": "API testing server"
        },
        {
            "url": "https:/localhost/3000",
            "description": "API testing server"
        }
    ],
    "paths": {
        "/groups": {
            "get": {
                "summary": "Get list of groups",
                "operationId": "read_groups",
                "tags": [
                    "groups"
                ],
                "responses": {
                    "200": {
                       "description": "Groups read successfully",
                       "content": {
                           "application/json": {
                               "schema": {
                                   "$ref": "#/components/schemas/ReadGroups"
                               }
                           }
                       }
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            },
            "post": {
                "summary": "Add new group",
                "operationId": "create_group",
                "tags": [
                    "groups"
                ],
                "requestBody": {
                    "description": "Request body for creating a group",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Group"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                       "description": "Null response"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            }
        },
        "/groups/{id}": {
            "get": {
                "summary": "Get group by id",
                "operationId": "group_by_id",
                "tags": [
                    "groups"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/id"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Group read successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ReadGroup"
                                }
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            },
            "post": {
                "summary": "Update group by id",
                "operationId": "update_group",
                "tags": [
                    "groups"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/id"
                    }
                ],
                "requestBody": {
                    "description": "Request body for group update",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Group"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                       "description": "Null response"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            },
            "delete": {
                "summary": "Delete group",
                "operationId": "delete_group",
                "tags": [
                    "groups"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/id"
                    }
                ],
                "responses": {
                    "200": {
                       "description": "Null response"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            }
        }
    },
    "components": {
        "parameters": {
            "id": {
                "name": "id",
                "description": "Group id",
                "required": true,
                "in": "path",
                "schema": {
                    "type": "integer",
                    "format": "int32",
                    "minimum": 0,
                    "example": 42
                }
            }
        },
        "responses": {
            "Unauthorized": {
                "description": "Unauthorized",
                "content": {
                   "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        },
                        "example": {
                            "code": 401,
                            "message": "Authorization required"
                        }
                    }
                }
            },
            "NotFound": {
                "description": "The specified resource was not found",
                "content": {
                   "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        },
                        "example": {
                            "code": 404,
                            "message": "Object not found"
                        }
                    }
                }
            },
            "UnexpectedError": {
                "description": "Unexpected error",
                "content": {
                   "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        }
                    }
                }
            }
        },
        "schemas": {
            "Group": {
                "type": "object",
                "required": [
                    "number",
                    "faculty",
                    "specialty",
                    "study_mode",
                    "room"
                ],
                "properties": {
                    "number": {
                        "description": "group number",
                        "type": "integer",
                        "format": "int32",
                        "minimum": 0,
                        "example": 42
                    },
                    "faculty_id": {
                        "description": "faculty of the group",
                        "type": "integer",
                        "format": "int32",
                        "minimum": 0,
                        "example": 42
                    },
                    "specialty_id": {
                        "description": "specialty of the group",
                        "type": "integer",
                        "format": "int32",
                        "minimum": 0,
                        "example": 42
                    },
                    "study_mode_id": {
                        "description": "study mode of the group",
                        "type": "integer",
                        "format": "int32",
                        "minimum": 0,
                        "example": 42
                    },
                    "room_id": {
                        "description": "audience of the group",
                        "type": "integer",
                        "format": "int32",
                        "minimum": 0,
                        "example": 42
                    }
                }
            },
            "ReadGroup": {
                "allOf": [
                    {
                        "type": "object",
                        "required": [
                            "id"
                        ],
                        "properties": {
                            "id": {
                                "description": "group id",
                                "type": "integer",
                                "format": "int32",
                                "minimum": 0,
                                "example": 42
                            }
                        }
                    },
                    {
                        "$ref": "#/components/schemas/Group"
                    }
                ]
            },
            "ReadGroups": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/ReadGroup"
                }
            },
            "Error": {
                "type": "object",
                "required": [
                    "code",
                    "message"
                ],
                "properties": {
                    "code": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "message": {
                        "type": "string"
                    }
                }
            }
        }
    }
}