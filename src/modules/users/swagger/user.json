{
    "openapi": "3.0.1",
    "info": {
        "title": "My univer docs",
        "description": "",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "email": "artik.e@mail.ru"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url":"https:/localhost",
            "description":"Server to test api"
        }
    ],
    "tags": [
        {
          "name": "users",
          "description": "operations about users"
        },
        {
          "name": "roles",
          "description": "Operations about roles"
        }
    ],
    "paths": {
        "/users": {
            "get": {
                "tags": [ "users" ],
                "description": "list of all users",
                "responses": {
                    "200": {
                        "description": "A list of users",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/usersList"
                                }
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    }
                }
            },
            "post": {
                "tags": [ "users" ],
                "description": "add new user",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/newUser"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "New user",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "format": "int32",
                                            "description": "Идентификатор пользователя",
                                            "minimum": 1
                                        },
                                        "login": {
                                            "type": "string",
                                            "description": "Логин пользователя",
                                            "minLength": 4
                                        }
                                    }
                                },
                                "example": {
                                    "id": 1,
                                    "login": "user1"
                                }
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    } ,
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    }
                }
            }
        },
        "/users/{id}": {
            "get": {
                "tags": [ "users" ],
                "description": "Return all user info. Each user is identified by a numeric `id`.",
                "parameters": [
                    {
                        "$ref":"#/components/parameters/id"
                    }
                ],
                "responses": {
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    } ,
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    }
                }
            },
            "post": {
                "tags": [ "users" ],
                "description": "Update user info. Each user is idetificated by a `id`",
                "parameters": [
                    {
                        "$ref":"#/components/parameters/id"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/userInfo"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            },
            "delete": {
                "tags": [ "users" ],
                "description": "Soft user deletion. User identrified by `id`",
                "parameters": [{
                    "in": "path",
                    "name": "id",
                    "required": true,
                    "schemas": {
                        "$ref": "#/components/userId"
                    }
                }],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "404": {
                        "description": "NOT FOUND"
                    }
                }
            }
        }
    },


    "components": {
        "parameters": {
            "id": {
                "name": "id",
                "description": "Идентификатор пользователя",
                "required": true,
                "in": "path",
                "schema": {
                    "type": "integer",
                    "format": "int32",
                    "minimum": 1,
                    "example": 9
                }
            }
        },
        "schemas": {
            "user": {
                "type": "object",
                "required": [
                    "id",
                    "login",
                    "full_name"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int32",
                        "description": "Идентификатор пользователя",
                        "minimum": 1
                    },
                    "login": {
                        "type": "string",
                        "nimLength": 4,
                        "uniqueItems": true
                    },
                    "full_name": {
                        "type": "string",
                        "nimLength": 4
                    }
                }
            },
            "usersList": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/user"
                }
            },
            "newUser": {
                "type": "object",
                "required": [
                    "login",
                    "password"
                ],
                "properties":{
                    "login": {
                        "type": "string",
                        "nimLength": 4,
                        "uniqueItems": true
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "nimLength": 4
                    }
                },
                "example": {
                    "login": "user",
                    "password": "user123"
                }
            },
            "userInfo": {
                "type": "object",
                "required": [
                    "login",
                    "full_name",
                    "email",
                    "sex",
                    "birthday"
                ],
                "properties": {       
                    "id": {
                        "type": "integer",
                        "format": "int32",
                        "description": "Идентификатор пользователя",
                        "minimum": 1
                    },
                    "login": {
                        "type": "string",
                        "nimLength": 4,
                        "uniqueItems": true
                    },
                    "full_name": {
                        "type": "string",
                        "maxLength": 255
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "uniqueItems": true
                    },
                    "sex": {
                        "type": "string"
                    },
                    "birthday": {
                        "type": "string",
                        "format": "date"
                    },
                    "description": {
                        "type": "string",
                        "format": "text"
                    },
                    "city": {
                        "type": "string",
                        "maxLength": 100
                    },
                    "address": {
                        "type": "string",
                        "maxLength": 100
                    }
                },
                "example": {
                    "id": 3,
                    "login": "test_user",
                    "full_name": "Иванов Иван Иванович",
                    "email": "test.user@mail.ru",
                    "sex": "м",
                    "birthday": "01.01.1999",
                    "description": "test user",
                    "city": "Витебск",
                    "address": "Витебск, пр-т Строителей 15В"
                }
            },
            "Error": {
                "type": "object",
                "required": [
                    "code",
                    "message"
                ],
                "properties": {
                    "code": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "message": {
                        "type": "string"
                    }
                }
            }
        },
        "responses": {
            "Ok": {
                "description": "Ok"
            },
            "Unauthorized": {
                "description": "Unauthorized",
                "content": {
                   "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        },
                        "example": {
                            "code": 401,
                            "message": "Unauthorized user"
                        }
                    }
                }
            },
            "NotFound": {
                "description": "The specified resource was not found",
                "content": {
                   "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        },
                        "example": {
                            "code": 404,
                            "message": "Object not found"
                        }
                    }
                }
            },
            "UnexpectedError": {
                "description": "Unexpected error",
                "content": {
                   "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        }
                    }
                }
            }
        }
    }
}