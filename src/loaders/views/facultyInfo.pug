extends layout

block content

    - var id = faculty.id

    <div class='container'>
        <table class='table'>
            <th> Name </th>
            <tr> 
                <td> #{faculty.name}</td>
            </tr>
            <th> Short name </th>
            <tr>
                <td> #{faculty.short_name} </td>
            </tr>
            <th> Description </th>
            <tr>
                <td> #{faculty.info_faculty.description} </td>
            </tr>
            <th> Phone number </th>
            <tr>
                <td> #{faculty.info_faculty.phone_number} </td>
            </tr>
        </table>
        <div style="position: relative;">
            if currentUser.roles[0].id == 2
                <a style="float:left; margin:0 10px;" href="#{id}/edit" class="btn btn-outline-warning active" role="button" aria-pressed="true">Edit</a>
                <form style="float:left; margin:0 10px;" method="POST" action="/faculties/#{id}/delete">
                    <button class="btn btn-danger" type="submit">Delete</button>
                </form>
            <a style="float:left; margin:0 10px;" href="/faculties" class="btn btn-primary active" role="button" aria-pressed="true">Back</a>
        </div>
    </div>