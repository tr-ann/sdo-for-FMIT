extends layout

block content

	- var id = faculty.id

	<div>
		<form style="margin-top: 1rem;" method="POST" action="/faculties/#{id}">
		
			<p style="margin-top: 1rem;" class="lead">Name</p>
			<input class="form-control" name="name" type="text" value=#{faculty.name}>

			<p style="margin-top: 1rem;" class="lead">Short name</p>
			<input class="form-control"  name="short_name" type="text" value=#{faculty.short_name}>

			<p style="margin-top: 1rem;" class="lead">Description</p>
			<input class="form-control" name="description" type="text" value=#{faculty.info_faculty.description}>

			<p style="margin-top: 1rem;" class="lead">Phone number</p>
			<input class="form-control" name="phone_number" type="text" value=#{faculty.info_faculty.phone_number}>

			<button style="margin-top: 1rem;" class="btn btn-success" type="submit">Send</button>
		</form>
	</div>