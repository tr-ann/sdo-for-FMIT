extends layout

block content
    <div class='container'>
        <table class='table'>
            <th> Name </th>
            <th> Short name </th>
            //- <th> Description </th>
            //- <th> Phone number </th>
            for faculty in faculties
                - var id = faculty.id
                <tr> 
                    <td> <a href = "faculties/#{id}"> #{faculty.name} </a></td>
                    <td> #{faculty.short_name} </td>
                    //- <td> #{faculty.info_faculty.description} </td>
                    //- <td> #{faculty.info_faculty.phone_number} </td>
                </tr>
        </table>
        if currentUser.roles[0].id == 2
            <a href="faculties/create" class="btn btn-primary active" role="button" aria-pressed="true">Create</a>
    </div>