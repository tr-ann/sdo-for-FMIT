extends layout

block content
    form(method='POST' action='/login')
        div.form-group
            label(for='name') Name:
            input#name.form-control(type='text' name='login') 
        div.form-group
            label(for='password') Password:
            input#password.form-control(type='password' name='password')
        button.btn.btn-primary(type='submit') Sign up
