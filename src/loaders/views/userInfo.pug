extends layout

block content
  table.table
    tr 
      td Name
      td #{user.user_info.lastName} #{user.user_info.firstName} #{user.user_info.middleName}
    tr 
      td Login
      td #{user.login}
    tr
      td Email
      td #{user.user_info.email}
    tr
      td Sex
      td 
        if user.user_info.sex == 'm'
          span male
        else 
          span female
    tr
      td Birthday
      td #{user.user_info.birthday}
    tr  
      td City
      td #{user.user_info.city}
    tr
      td Address
      td #{user.user_info.address}
    tr
      td Phone
      td 
        for phone in user.phones
          span #{phone.phone}, 

  a.btn.btn-outline-warning.active(href="/users/" + user.id + "/edit" role="button" aria-pressed="true") Edit
  
  form.form-inline.my-2.my-lg-0(method='DELETE' action='/user/' + user.id)
    button.btn.btn-outline-danger.my-2.my-sm-0(type="submit") Delete