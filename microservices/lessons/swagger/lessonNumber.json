                    "end_time_1",
                    "start_time_2",
                    "end_time_2"
                ],
                "properties": {
                    "number": {
                        "description": "Номер занятия",
                        "type": "integer",
                        "format": "int32",
                        "minimum": 1,
                        "maximum": 8,
                        "example": 2
                    },
                    "start_time_1": {
                        "description": "Начало первой половины занятия",
                        "type": "string",
                        "format": "time",
                        "example": "09:35"
                    },
                    "end_time_1": {
                        "description": "Конец первой половины занятия",
                        "type": "string",
                        "format": "time",
                        "example": "10:15"
                    },
                    "start_time_2": {
                        "description": "Начало второй половины занятия",
                        "type": "string",
                        "format": "time",
                        "example": "10:20"
                    },
                    "end_time_2": {
                        "description": "Конец второй половины занятия",
                        "type": "string",
                        "format": "time",
                        "example": "11:00"
                    }
                }
            },
            "ReadLessonNumber": {
                "allOf": [
                    {
                        "type": "object",
                        "required": [
                            "id"
                        ],
                        "properties": {
                            "id": {
                                "description": "Идентификатор номера занятия",
                                "type": "integer",
                                "format": "int32",
                                "minimum": 0,
                                "example": 207
                            }
                        }
                    },
                    {
                        "$ref": "#/components/schemas/LessonNumber"
                    }
                ]
            },
            "ReadLessonNumbers": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/ReadLessonNumber"
                }
            },
            "Error": {
                "type": "object",
                "required": [
                    "code",
                    "message"
                ],
                "properties": {
                    "code": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "message": {
                        "type": "string"
                    }
