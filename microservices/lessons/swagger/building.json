{
    "openapi": "3.0.1",
    "info": {
        "title": "Пути для работы с корпусами",
        "description": "Здесь находится описание путей, ведущих к API для работы с корпусами",
        "contact": {
            "name": "Контактные данные отдела разработчиков",
            "email": "apiteam@swagger.io"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http:/localhost/3000",
            "description": "Сервер для тестирования API"
        },
        {
            "url": "https:/localhost/3000",
            "description": "Сервер для тестирования API"
        }
    ],
    "paths": {
        "/buildings": {
            "get": {
                "summary": "Получение списка корпусов",
                "operationId": "read_buildings",
                "tags": [
                    "buildings"
                ],
                "responses": {
                    "200": {
                       "description": "Buildings read successfully",
                       "content": {
                           "application/json": {
                               "schema": {
                                   "$ref": "#/components/schemas/ReadBuildings"
                               }
                           }
                       }
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            },
            "post": {
                "summary": "Создание корпуса",
                "operationId": "create_building",
                "tags": [
                    "buildings"
                ],
                "requestBody": {
                    "description": "Тело запроса на создание корпуса",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Building"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                       "description": "Null response"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            }
        },
        "/buildings/{id}": {
            "get": {
                "summary": "Получение информации о корпусе",
                "operationId": "building_by_id",
                "tags": [
                    "buildings"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/id"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Building read successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ReadBuilding"
                                }
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            },
            "post": {
                "summary": "Обновление информации о корпусе",
                "operationId": "update_building",
                "tags": [
                    "buildings"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/id"
                    }
                ],
                "requestBody": {
                    "description": "Тело запроса для обновления корпуса",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Building"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                       "description": "Null response"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            },
            "delete": {
                "summary": "Удаление корпуса",
                "operationId": "delete_building",
                "tags": [
                    "buildings"
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/id"
                    }
                ],
                "responses": {
                    "200": {
                       "description": "Null response"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "default": {
                        "$ref": "#/components/responses/UnexpectedError"
                    }
                }
            }
        }
    },
    "components": {
        "parameters": {
            "id": {
                "name": "id",
                "description": "Идентификатор корпуса",
                "required": true,
                "in": "path",
                "schema": {
                    "type": "integer",
                    "format": "int32",
                    "minimum": 0,
                    "example": 5
                }
            }
        },
        "responses": {
            "Unauthorized": {
                "description": "Unauthorized",
                "content": {
                   "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        },
                        "example": {
                            "code": 401,
                            "message": "Требуется авторизация"
                        }
                    }
                }
            },
            "NotFound": {
                "description": "The specified resource was not found",
                "content": {
                   "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        },
                        "example": {
                            "code": 404,
                            "message": "Объект не найден"
                        }
                    }
                }
            },
            "UnexpectedError": {
                "description": "Unexpected error",
                "content": {
                   "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        }
                    }
                }
            }
        },
        "schemas": {
            "Building": {
                "type": "object",
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "description": "Название корпуса",
                        "type": "string",
                        "example": "ГЛАВНЫЙ КОРПУС!"
                    }
                }
            },
            "ReadBuilding": {
                "allOf": [
                    {
                        "type": "object",
                        "required": [
                            "id"
                        ],
                        "properties": {
                            "id": {
                                "description": "Идентификатор корпуса",
                                "type": "integer",
                                "format": "int32",
                                "minimum": 0,
                                "example": 5
                            }
                        }
                    },
                    {
                        "$ref": "#/components/schemas/Building"
                    }
                ]
            },
            "ReadBuildings": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/ReadBuilding"
                }
            },
            "Error": {
                "type": "object",
                "required": [
                    "code",
                    "message"
                ],
                "properties": {
                    "code": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "message": {
                        "type": "string"
                    }
                }
            }
        }
    }
}